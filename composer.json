{
    "name": "dmlab/skapp",
    "description": "A fast ZF2 skeleton application",
    "license": "BSD-3-Clause",
    "keywords": [
        "framework",
        "zf2",
        "webapp"
    ],
    "homepage": "https://github.com/dmlab/skapp",
    "require": {
        "php": ">=5.4.0",
        "zendframework/zendframework": "~2.3",
        "ripaclub/zf2-hanger-snippet": "1.*",
        "widmogrod/zf2-assetic-module": "1.3.*",
        "matryoshka-model/zf2-matryoshka-module": "~0.4",
        "matryoshka-model/mongo-wrapper": "~0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.3",
        "zendframework/zftool": "dev-master",
        "zendframework/zend-developer-tools": "dev-master"
    },
    "scripts": {
        "post-install-cmd": [
            "sudo chmod -R 777 public/_/asset",
            "sudo chmod 666 data"
        ]
    }
